<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

   <bean id="helloWorld" class="com.ioc.event.HelloWorld">
      <property name="message" value="Hello World!"/>
   </bean>
   <bean id="cStartEventHandler" class="com.ioc.event.CStartEventHandler"/>
   <bean id="cStopEventHandler" class="com.ioc.event.CStopEventHandler"/>
   
   <bean id="customEventHandler" class="com.ioc.event.custom.CustomEventHandler"/>
   <bean id="customEventPublisher" class="com.ioc.event.custom.CustomEventPublisher"/>
	
</beans>